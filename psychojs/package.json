{
  "name": "psychojs",
  "version": "2020.1.0",
  "private": true,
  "description": "Helps run in-browser neuroscience, psychology, and psychophysics experiments",
  "license": "MIT",
  "author": {
    "name": "Alain Pitiot"
  },
  "type": "module",
  "main": "index.js",
  "scripts": {
    "build": "npm run build:js",
    "build:docs": "jsdoc js -r -d docs",
    "prebuild:js": "rm -rf dist/*",
    "build:js": "rollup -c",
    "lint": "npm run lint:js",
    "lint:js": "jshint js",
    "start": "npm run build",
    "test": "node test.cjs"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "modules": false,
          "targets": {
            "ie": 11
          },
          "spec": true,
          "forceAllTransforms": true,
          "debug": true
        }
      ]
    ]
  },
  "dependencies": {},
  "devDependencies": {
    "jsdoc": "^3.6.3",
    "jshint": "^2.11.1",
    "rollup": "^2.22.1",
    "terser": "^5.0.0"
  },
  "jshintConfig": {
    "esversion": 8
  }
}
